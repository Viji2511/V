{
  "system": {
    "name": "VaanamWeather",
    "version": "2.0.0",
    "description": "ML-powered weather API with automated data pipeline"
  },
  
  "default_locations": [
    {
      "name": "Chennai",
      "lat": 13.0827,
      "lon": 80.2707,
      "country": "India"
    },
    {
      "name": "Delhi",
      "lat": 28.7041,
      "lon": 77.1025,
      "country": "India"
    },
    {
      "name": "Mumbai",
      "lat": 19.0760,
      "lon": 72.8777,
      "country": "India"
    },
    {
      "name": "Bangalore",
      "lat": 12.9716,
      "lon": 77.5946,
      "country": "India"
    }
  ],
  
  "data_sources": {
    "enabled": [
      "nasa_power",
      "hydrology",
      "inpe"
    ],
    "nasa_power": {
      "url": "https://power.larc.nasa.gov/api/temporal/daily/point",
      "parameters": ["T2M", "PRECTOTCORR", "WS10M", "RH2M", "PS"],
      "timeout": 30
    },
    "opendap": {
      "enabled": false,
      "requires_auth": true
    },
    "hydrology": {
      "enabled": true
    },
    "inpe": {
      "enabled": true,
      "coverage": "South America"
    }
  },
  
  "data_fetch": {
    "days_history": 1095,
    "auto_update": true,
    "update_interval_days": 7,
    "batch_size": 365,
    "retry_attempts": 3,
    "retry_delay_seconds": 5
  },
  
  "data_processing": {
    "missing_value_method": "interpolate",
    "remove_outliers": true,
    "outlier_std_threshold": 3.0,
    "resample_frequency": "D",
    "min_data_points": 30
  },
  
  "ml_training": {
    "variables": [
      "temperature",
      "precipitation",
      "windspeed",
      "humidity"
    ],
    "lstm": {
      "enabled": true,
      "sequence_length": 30,
      "epochs": 50,
      "batch_size": 32,
      "validation_split": 0.2,
      "units": [64, 32],
      "dropout": 0.2
    },
    "random_forest": {
      "enabled": true,
      "n_estimators": 100,
      "max_depth": null,
      "min_samples_split": 2,
      "random_state": 42
    },
    "anomaly_detection": {
      "enabled": true,
      "contamination": 0.05,
      "method": "isolation_forest",
      "n_estimators": 100
    },
    "retrain_interval_days": 30,
    "min_training_samples": 365,
    "auto_retrain": true
  },
  
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 4,
    "timeout": 300,
    "cors": {
      "allow_origins": ["*"],
      "allow_methods": ["*"],
      "allow_headers": ["*"]
    },
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst": 10
    },
    "cache": {
      "enabled": true,
      "ttl_seconds": 3600,
      "max_size_mb": 100
    }
  },
  
  "predictions": {
    "default_forecast_days": 7,
    "max_forecast_days": 30,
    "confidence_level": 0.95,
    "ensemble_models": true
  },
  
  "monitoring": {
    "log_level": "INFO",
    "log_rotation": "daily",
    "log_retention_days": 30,
    "metrics_enabled": true,
    "health_check_interval_seconds": 60
  },
  
  "storage": {
    "data_dir": "./data",
    "model_dir": "./models",
    "log_dir": "./logs",
    "cache_dir": "./cache",
    "max_storage_gb": 10
  },
  
  "notifications": {
    "enabled": false,
    "email": {
      "enabled": false,
      "smtp_server": "",
      "smtp_port": 587,
      "sender": "",
      "recipients": []
    },
    "webhook": {
      "enabled": false,
      "url": "",
      "events": ["training_complete", "api_error", "data_fetch_failed"]
    }
  },
  
  "security": {
    "admin_token_required": true,
    "api_key_required": false,
    "rate_limit_by_ip": true,
    "allowed_ips": []
  },
  
  "deployment": {
    "environment": "development",
    "cloud_provider": "local",
    "auto_scaling": {
      "enabled": false,
      "min_instances": 1,
      "max_instances": 10,
      "target_cpu_percent": 70
    }
  }
}
